#include <bits/stdc++.h>

using namespace std;

int main()
{
    string str;
    bool flag = false;

    cout << "enter your string!" << endl;
    cin >> str;
    cout << "string :- \t" << str << endl;
    //helle
    while(1){
            cout << str << endl;
        for(int i = 0 ; i < str.length() ; i++){
            if(str[i] == str[i+1]){
                str.erase(i , 2);
                cout << "after erase\t"<< str << endl;

                break;
            }
            if(i == str.length()-1){
                flag = true;
            }
        }
        if(flag ==true){
            break;
        }
    }
    cout << "new string is \t" << str;


    return 0;
}
